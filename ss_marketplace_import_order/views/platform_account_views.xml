<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="platform_account_view_tree" model="ir.ui.view">
        <field name="name">platform.account.view.tree</field>
        <field name="model">platform.account</field>
        <field name="arch" type="xml">
            <tree string="Platform Account">
                <field name="platform_id" />
                <field name="warehouse_id" />
                <field name="income_account_id" />
            </tree>
        </field>
    </record>

    <record id="platform_account_view_form" model="ir.ui.view">
        <field name="name">platform.account.view.form</field>
        <field name="model">platform.account</field>
        <field name="arch" type="xml">
            <form string="Platform Account">
                <sheet>
                    <group>
                        <group>
                            <field name="platform_id" options="{'no_create_edit': True, 'no_create': True}" />
                            <field name="warehouse_id" options="{'no_create_edit': True, 'no_create': True}" />
                        </group>
                        <group>
                            <field name="income_account_id" options="{'no_create_edit': True, 'no_create': True}" />
                        </group>
                    </group>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids" />
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
